# ZTodo Configuration File
# Copy this file to ~/.ztodo.conf and modify as needed

# Database path
# Where ZTodo will store your tasks
ZTODO_DB_PATH="$HOME/.ztodo.db"

# Default task properties
# These values will be used when not specified during task creation

# Default priority (1-High, 2-Medium, 3-Low)
ZTODO_DEFAULT_PRIORITY=2

# Default category
ZTODO_DEFAULT_CATEGORY="general"

# Auto-cleanup settings
# Set to "true" to automatically clean up completed tasks after this many days
ZTODO_AUTO_CLEANUP_COMPLETED=false
ZTODO_COMPLETED_RETENTION_DAYS=30

# UI Settings
# Customize colors (use ANSI color codes)
ZTODO_COLOR_HIGH='\033[0;31m'   # Red
ZTODO_COLOR_MEDIUM='\033[0;33m' # Yellow
ZTODO_COLOR_LOW='\033[0;32m'    # Green
ZTODO_COLOR_HEADER='\033[0;34m' # Blue
ZTODO_COLOR_ID='\033[0;35m'     # Purple

# Date format (strftime format)
ZTODO_DATE_FORMAT="%Y-%m-%d"

# Default view options
# What to show by default when running 'ztodo' without arguments
# Options: active (default), all, completed, overdue
ZTODO_DEFAULT_VIEW="active"

# Upcoming deadlines notification
# Whether to show upcoming deadlines on shell initialization
ZTODO_SHOW_UPCOMING_DEADLINES=true

# Number of days to look ahead for upcoming deadlines (default: 7 days)
ZTODO_UPCOMING_DAYS=7
